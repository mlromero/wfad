<h2 id="example">Example</h2>
<div class="example"><div class="jqm-loaddialog-page"><h4 id="example_source">Source</h4>
<div source-edit="jqm" source-edit-deps="angular.js script.js" source-edit-html="index.html-16" source-edit-css="" source-edit-js="script.js-17" source-edit-json="" source-edit-unit="" source-edit-scenario=""></div>
<div class="tabbable"><div class="tab-pane" title="index.html">
<pre class="prettyprint linenums" ng-set-text="index.html-16" ng-html-wrap-loaded="jqm angular.js script.js"></pre>
<script type="text/ng-template" id="index.html-16">
<div ng-controller="DemoCtrl">
  <button ng-click="$loadDialog.hide()">Hide</button>
  <hr />
  <div jqm-textinput placeholder="Dialog Text" ng-model="dialogText"></div>
  <button ng-click="$loadDialog.show(dialogText)">Show{{dialogText && ' with text' || ''}}</button>
  <hr />
  <button ng-click="showForPromise()">waitFor promise</button>
</div>
</script>
</div>
<div class="tab-pane" title="script.js">
<pre class="prettyprint linenums" ng-set-text="script.js-17"></pre>
<script type="text/ng-template" id="script.js-17">
function DemoCtrl($scope, $loadDialog, $timeout, $q) {
  $scope.$loadDialog = $loadDialog;   

  $scope.showForPromise = function() {
  var deferred = $q.defer();
  $timeout(deferred.resolve, 1000);

  $loadDialog.waitFor(deferred.promise, 'Showing for 1000ms promise...');
  };
}
</script>
</div>
